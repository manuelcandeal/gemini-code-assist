{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "classic",
    "outDir": "./src/dist",
    "rootDir": "./src/js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": [
    "src/js/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
